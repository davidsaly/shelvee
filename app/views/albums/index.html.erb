

<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <p id="notice"><%= notice %></p>

  <%= render 'form' %>

  <h3>My Albums</h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Description</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @my_albums.each do |album| %>
        <tr>
          <% if album.cooperations.count == 1 %> 
            <td><span class="glyphicon glyphicon-user"></span></td>
          <% else %>
            <td></td>
          <% end %>
          <td><%= link_to album.title, album %></td>
          <td><%= link_to album.description, album %></td>
          <td><%#= link_to 'Show', album %></td>
          <td>
            <%= link_to edit_album_path(album) do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
          </td>
          <td>
            <%= link_to album, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>Shared With Me</h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Description</th>
        <th>Owner</th>
      </tr>
    </thead>

    <tbody>
      <% @shared_albums.each do |album| %>
        <tr>
          <td></td>
          <td><%= link_to album.title, album %></td>
          <td><%= link_to album.description, album %></td>
          <td><%= User.find_by_id(album.owner_id).email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>



  <br>
 
  </div>
</div>

