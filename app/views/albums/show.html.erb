	
<%#= link_to 'Back', albums_path %>
	<div class="row">
	  <div class="col-md-4 col-md-offset-4">

		<p id="notice"><%= notice %></p>

		<p>
		  <strong>Title:</strong>
		  <%= @album.title %>
		</p>

		<p>
		  <strong>Description:</strong>
		  <%= @album.description %>
		</p>

		<%= render 'photoupload' %>

		<%#= link_to 'Edit', edit_album_path(@album) %> 

		</div>
	</div>

<div class="container-fluid">
  <div class="row center">
    <% @photos.each do |photo| %>
      <div class="col-md-4">

          <div class="thumbnail">
            
            <div class="caption">
              <h3><%= photo.description %></h3>
            </div>
              <span class="content" class="img-responsive">
                <%= image_tag photo.picture.url if photo.picture? %>
              </span>
          </div>
      </div>  
    <% end %>
  </div>
</div>