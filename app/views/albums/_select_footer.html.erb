
<%= form_for [@album, @selection] do %>
    <% if params[:controller] == 'albums' %>
    <%= select_tag 'photo_list', options_for_select(@photos.collect{ |u| [ u.id, {'data-img-src' => u.picture.url(:thumb)},{'data-href-src' => album_photo_url(@album, u)},{'data-href-src-img' => u.picture.url}] }), :multiple => true, id: 'selectImage', class: 'show-html image-picker' %> 
    <% else %>

        <%= select_tag 'photo_list', options_for_select(@photos.collect{ |u| [ u.id, {'data-img-src' => u.picture.url(:thumb)},{'data-href-src' => shelving_path(@selection.shelvings.find_by(photo_id: u.id))},{'data-href-src-img' => u.picture.url}] }), :multiple => true, id: 'selectImage', class: 'show-html image-picker' %> 

    <% end %>

    <nav class="navbar navbar-default navbar-fixed-bottom navbar-hide" id="sel-footer">
      <div class="container">

      	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-left"> 
            <div class="row">
              <div class="col-md-6">    
                <div class="input-group" id="selection-group">
                          <span class="input-group-addon">
                            <%= label_tag :checkbox, "Download" %>
                            <%= check_box_tag "Download", class: "checkbox" %>
                          </span>
                          <span>
                          <%= text_field_tag "selection[name]", nil, :placeholder => "Selection Name", class: "form-control", type: "text" %>
                          </span>
                          <span class="input-group-btn">
                          <%= submit_tag ("Create Selection"), class: "btn btn-default" %>
                        </span>

                </div>
              </div>
            </div>
          </ul>

          <ul class="nav navbar-nav navbar-right"> 
          </ul>

<% end %>

        </div>

      </div>
     </nav>